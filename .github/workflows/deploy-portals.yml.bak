name: "Deploy SageAccountWeb"

on:
  push:
    branches:
      - releases/portals/production
      - releases/portals/staging
      - main
    paths:
      - "apps/portals/**"
      - "packages/synapse-react-client/**"

jobs:
  build-and-deploy:
    name: build-and-deploy
    # limit to this repository
    if: github.repository == 'Sage-Bionetworks/synapse-web-monorepo'
    runs-on: ubuntu-latest
    # Allow OIDC Integration (so we can assume the AWS role to deploy)
    permissions:
      id-token: write
      contents: read
    steps:
      - name: checkout
        uses: actions/checkout@v3.0.0
      - uses: ./.github/actions/pnpm-setup-action
      - name: Assume AWS Role
        uses: aws-actions/configure-aws-credentials@v2
        with:
          aws-region: us-east-1
          role-to-assume: arn:aws:iam::797640923903:role/sagebase-github-oidc-sage-ProviderRolesynapsewebmo-1DNSZNE6O57RM
          role-session-name: GitHubActions-${{ github.repository_owner }}-${{ github.event.repository.name }}-${{ github.run_id }}
          role-duration-seconds: 1200
      # if in staging branch 
      - name: setup-outputbucket-staging
        if: github.ref == 'refs/heads/releases/portals/staging'
        run: |
          echo cd apps/portals
          echo chmod +x ./run.sh
          echo find ./src/configurations -mindepth 1 -maxdepth 1 -type d -not -name config-shell -exec basename {} \; | xargs -I % echo bash -c ./run.sh push-staging %
      # if in production branch
      - name: setup-outputbucket-prod
        if: github.ref == 'refs/heads/releases/portals/production'
        run: |
          echo cd apps/portals
          echo chmod +x ./run.sh
          echo find ./src/configurations -mindepth 1 -maxdepth 1 -type d -not -name config-shell -exec basename {} \; | xargs -I % echo bash -c ./run.sh WARNING-push-production %
      # if in main branch
      -name: test
        if: github.ref == 'refs/heads/main'
        run: |
          echo cd apps/portals
          echo chmod +x ./build.sh
          echo find ./src/configurations -mindepth 1 -maxdepth 1 -type d -not -name config-shell -exec basename {} \; | xargs -I % echo bash -c ./build.sh %
